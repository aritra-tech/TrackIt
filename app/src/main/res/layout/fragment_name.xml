<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".auth.fragments.NameFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_bg"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_medium"
            android:text="Hey, What's your name ?"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="First Name"
            android:fontFamily="@font/dm_sans"
            android:paddingStart="16dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:inputType="text"
            android:textColorHint="@color/grey"
            android:background="@drawable/edittext"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/firstNameHelperTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/dm_sans"
            android:textColor="@color/red"
            android:textSize="13sp"
            android:visibility="gone"
            tools:text="Please Enter the First Name." />

        <EditText
            android:id="@+id/last_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Last Name"
            android:fontFamily="@font/dm_sans"
            android:paddingStart="16dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:inputType="text"
            android:textColorHint="@color/grey"
            android:background="@drawable/edittext"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/lastNameHelperTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/dm_sans"
            android:textColor="@color/red"
            android:textSize="13sp"
            android:visibility="gone"
            tools:text="Please Enter the Last Name." />

        <TextView
            android:id="@+id/allDetailsHelperTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/dm_sans"
            android:textColor="@color/red"
            android:textSize="13sp"
            android:visibility="gone"
            tools:text="Please Enter the Details." />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/continue_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/button"
            android:text="Continue"
            android:textAllCaps="false"
            android:fontFamily="@font/dm_sans_medium"
            android:textColor="@color/white"
            android:textSize="18sp" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>